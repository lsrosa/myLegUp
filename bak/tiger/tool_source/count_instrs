#!/bin/bash

echo -e "	${1%%.*}"
CNT=`grep "add	" -c $1`;		echo -e "add   	${CNT}"
CNT=`grep "addi	" -c $1`;	echo -e "addi  	${CNT}"
CNT=`grep "addiu	" -c $1`;	echo -e "addiu 	${CNT}"
CNT=`grep "addu	" -c $1`;	echo -e "addu  	${CNT}"
CNT=`grep "and	" -c $1`;		echo -e "and   	${CNT}"
CNT=`grep "andi	" -c $1`;	echo -e "andi  	${CNT}"
CNT=`grep "beq	" -c $1`;		echo -e "beq   	${CNT}"
CNT=`grep "bgez	" -c $1`;	echo -e "bgez  	${CNT}"
CNT=`grep "bgezal	" -c $1`;	echo -e "bgezal	${CNT}"
CNT=`grep "bgtz	" -c $1`;	echo -e "bgtz  	${CNT}"
CNT=`grep "blez	" -c $1`;	echo -e "blez  	${CNT}"
CNT=`grep "bltz	" -c $1`;	echo -e "bltz  	${CNT}"
CNT=`grep "bltzal	" -c $1`;	echo -e "bltzal	${CNT}"
CNT=`grep "bne	" -c $1`;		echo -e "bne   	${CNT}"
CNT=`grep "div	" -c $1`;		echo -e "div   	${CNT}"
CNT=`grep "divu	" -c $1`;		echo -e "divu  	${CNT}"
CNT=`grep "j	" -c $1`;		echo -e "j     	${CNT}"
CNT=`grep "jal	" -c $1`;		echo -e "jal   	${CNT}"
CNT=`grep "jr	" -c $1`;		echo -e "jr   	${CNT}"
CNT=`grep "lb	" -c $1`;		echo -e "lb    	${CNT}"
CNT=`grep "lbu	" -c $1`;		echo -e "lbu    ${CNT}"
CNT=`grep "lh	" -c $1`;		echo -e "lh    	${CNT}"
CNT=`grep "lhu	" -c $1`;		echo -e "lhu    ${CNT}"
CNT=`grep "lui	" -c $1`;		echo -e "lui   	${CNT}"
CNT=`grep "lw	" -c $1`;		echo -e "lw    	${CNT}"
CNT=`grep "mfhi	" -c $1`;		echo -e "mfhi  	${CNT}"
CNT=`grep "mflo	" -c $1`;		echo -e "mflo  	${CNT}"
CNT=`grep "mult	" -c $1`;		echo -e "mult  	${CNT}"
CNT=`grep "multu	" -c $1`;	echo -e "multu 	${CNT}"
CNT=`grep "nop" -c $1`;		echo -e "nop   	${CNT}"
CNT=`grep "or	" -c $1`;		echo -e "or    	${CNT}"
CNT=`grep "ori	" -c $1`;		echo -e "ori   	${CNT}"
CNT=`grep "sb	" -c $1`;		echo -e "sb    	${CNT}"
CNT=`grep "sh	" -c $1`;		echo -e "sh    	${CNT}"
CNT=`grep "sll	" -c $1`;		echo -e "sll   	${CNT}"
CNT=`grep "sllv	" -c $1`;		echo -e "sllv  	${CNT}"
CNT=`grep "slt	" -c $1`;		echo -e "slt   	${CNT}"
CNT=`grep "slti	" -c $1`;		echo -e "slti  	${CNT}"
CNT=`grep "sltiu	" -c $1`;	echo -e "sltiu 	${CNT}"
CNT=`grep "sltu	" -c $1`;		echo -e "sltu  	${CNT}"
CNT=`grep "sra	" -c $1`;		echo -e "sra   	${CNT}"
CNT=`grep "srav	" -c $1`;		echo -e "srav   ${CNT}"
CNT=`grep "srl	" -c $1`;		echo -e "srl   	${CNT}"
CNT=`grep "srlv	" -c $1`;		echo -e "srlv  	${CNT}"
CNT=`grep "sub	" -c $1`;		echo -e "sub   	${CNT}"
CNT=`grep "subu	" -c $1`;		echo -e "subu  	${CNT}"
CNT=`grep "sw	" -c $1`;		echo -e "sw    	${CNT}"
CNT=`grep "xor	" -c $1`;		echo -e "xor   	${CNT}"
CNT=`grep "xori	" -c $1`;		echo -e "xori  	${CNT}"
